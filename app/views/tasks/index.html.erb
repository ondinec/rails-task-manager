
<h1>My tasks</h1>


<!-- display the list of tasks -->

<ul>

  <% @tasks.each do |task| %>
    <li><%= link_to task.completed %> <%= link_to task.title, task_path(task.id) %>  <%= link_to "delete", task_path(task.id), method: :delete,
            data: { confirm: "Are you sure?" }%></li>
  <% end %>
</ul>



